rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow reading everything
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow writes to designs folder for authenticated users or anonymous flows
    match /designs/{userId}/{allPaths=**} {
      allow write: if request.auth != null || userId == "anonymous";
    }

    // Default: writes require auth
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
